@model CRUD.Models.ViewModels.ProviderFormViewModel

<h2>Create</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <!--A Ação Create não será a que foi criada no Controlador e sim uma função POST-->
        <form asp-action="Create">
            @* <div asp-validation-summary="All" class="text-danger"></div> PARA APARECER OS ERROS EM FORMA DE LISTA *@
            <div class="form-group">
                <label asp-for="Provider.Name" class="form-label my-3"></label>
                <input asp-for="Provider.Name" class="form-control mb-2"/>
                <span asp-validation-for="Provider.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.Email" class="form-label my-3"></label>
                <input asp-for="Provider.Email" class="form-control mb-2" />
                <span asp-validation-for="Provider.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.BirthDate" class="form-label my-3"></label>
                <input asp-for="Provider.BirthDate" class="form-control mb-2" />
                <span asp-validation-for="Provider.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.BaseSalary" class="form-label my-3"></label>
                <input asp-for="Provider.BaseSalary" class="form-control mb-2" />
                <span asp-validation-for="Provider.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.DepartmentId" class="form-label my-3"></label>
                <select asp-for="Provider.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select bg-primary"></select>
            </div
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success mt-4"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}