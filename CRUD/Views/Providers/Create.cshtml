@model CRUD.Models.Provider

<h2>Create</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <!--A Ação Create não será a que foi criada no Controlador e sim uma função POST-->
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="form-label my-3"></label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label my-3"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="form-label my-3"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="form-label my-3"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-4"/>
            </div>
        </form>
    </div>
</div>