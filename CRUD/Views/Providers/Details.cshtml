@model CRUD.Models.Provider

<h2 class="text-center">Details</h2>
<hr />

<div class="bg-dark text-center w-25 px-5 py-3 mx-auto mt-2 fs-5 rounded-5">
    <i class="bi bi-person-circle display-1"></i>
    <p class="mt-3">@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name) </p>
    <hr />
    <p>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</p>
    <hr />
    <p>@Html.DisplayNameFor(model => model.BirthDate): @Html.DisplayFor(model => model.BirthDate)</p>
    <hr />
    <p>@Html.DisplayNameFor(model => model.BaseSalary): @Html.DisplayFor(model => model.BaseSalary)</p>
    <hr />
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info w-100">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary w-100 my-2">Back</a>
</div>

