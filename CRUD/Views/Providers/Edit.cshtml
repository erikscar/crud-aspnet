@model CRUD.Models.ViewModels.ProviderFormViewModel

<h2 class="text-center">Edit</h2>

<hr />

<div class="row fs-5">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Provider.Id" />
            <div class="form-group">
                <label asp-for="Provider.Name" class="form-label my-3"></label>
                <input asp-for="Provider.Name" class="form-control mb-2 fs-5" />
                <span asp-validation-for="Provider.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.Email" class="form-label my-3"></label>
                <input asp-for="Provider.Email" class="form-control mb-2 fs-5" />
                <span asp-validation-for="Provider.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.BirthDate" class="form-label my-3"></label>
                <input asp-for="Provider.BirthDate" class="form-control mb-2 fs-5" />
                <span asp-validation-for="Provider.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.BaseSalary" class="form-label my-3"></label>
                <input asp-for="Provider.BaseSalary" class="form-control mb-2 fs-5" />
                <span asp-validation-for="Provider.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.DepartmentId" class="form-label my-3"></label>
                <select asp-for="Provider.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select bg-primary fs-5"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success w-100 mt-4 fs-5"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}