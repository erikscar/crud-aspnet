@model CRUD.Models.Department


<h2 class="text-center">Edit</h2>

<div class="row fs-5">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label my-3"></label>
                <input asp-for="Name" class="form-control mb-2 fs-5" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label my-3"></label>
                <input asp-for="ImageUrl" class="form-control mb-2 fs-5" />
            </div>
            <p class="text-center">
                <input type="submit" value="Save" class="btn btn-outline-success w-100 mt-4 fs-5" />
            </p>
        </form>
        <p class="text-center">
            <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-4 fs-5">Back to List</a>
        </p>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
