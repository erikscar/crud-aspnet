@model CRUD.Models.Department

<h2 class="text-center">Create</h2>

<hr />
<div class="row fs-5">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="form-label my-3"></label>
                <input asp-for="Name" class="form-control mb-2 fs-5" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="form-label my-3"></label>
                <input asp-for="ImageUrl" class="form-control mb-2 fs-5" />
                @* <span asp-validation-for="ImageUrl" class="text-danger"></span> *@
            </div>
            <p class="text-center">
                <input type="submit" value="Create" class="btn btn-outline-success w-100 mt-4 fs-5" />
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
