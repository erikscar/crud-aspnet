<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Entity Framework - CRUD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-vapor.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUD.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="icon" href="@Url.Content("~/favicon.png")" type="image/x-icon" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow p-4 fs-4">
            <div class="container-fluid">
                <a class="navbar-brand fs-3" asp-area="" asp-controller="Home" asp-action="Index">CRUD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item hover-link">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item hover-link">
                            <a class="nav-link text-light" asp-area="" asp-controller="Departments" asp-action="Index">Departments</a>
                        </li>
                        <li class="nav-item hover-link">
                            <a class="nav-link text-light" asp-area="" asp-controller="Providers" asp-action="Index">Providers</a>
                        </li>
                        <li class="nav-item hover-link">
                            <a class="nav-link text-light" asp-area="" asp-controller="ProvidersRecords" asp-action="Index">Sales</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <hr />
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr />
    <footer class="text-center">
        <div class="display-4">
            <a href="https://www.linkedin.com/in/erik-scarcela/" target="_blank" class="hover-link text-light"><i class="bi bi-linkedin mx-2"></i></a>
            <a href="https://github.com/erikscar" target="_blank" class="hover-link text-light"><i class="bi bi-github mx-2"></i></a>
        </div>
        <p class="fs-5 mt-4">&copy; 2024 - Entity Framework CRUD - By:  <a href="https://www.linkedin.com/in/erik-scarcela/" target="_blank">Erik Scarcela</a></p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
