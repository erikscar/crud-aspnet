
<h2 class="text-center">Providers Records</h2>
<div class="row justify-content-center">
    <div class="col-md-5">
        <form  asp-action="SimpleSearch">
            <fieldset>
                <legend class="text-secondary">Simple search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 form-label my-3">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 form-label my-3">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2 text-center">
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-5">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend class="text-secondary">Grouping search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 form-label my-3">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 form-label my-3">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2 text-center">
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>