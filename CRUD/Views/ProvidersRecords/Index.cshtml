<h1 class="text-center">Providers Records</h1>

<div class="container text-center">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form asp-action="SimpleSearch">
                <fieldset>
                    <legend class="text-secondary display-6">Simple search</legend>
                    <div class="form-group">
                        <label for="minDate" class="form-label my-3 fs-5">Min Date</label>
                        <input type="date" name="minDate" class="form-control fs-5" />
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="form-label my-3 fs-5">Max Date</label>
                        <input type="date" name="maxDate" class="form-control fs-5" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mt-3 fs-5">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="GroupingSearch">
                <fieldset>
                    <legend class="text-secondary display-6">Grouping search</legend>
                    <div class="form-group">
                        <label for="minDate" class="form-label my-3 fs-5">Min Date</label>
                        <input type="date" name="minDate" class="form-control fs-5" />
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="form-label my-3 fs-5">Max Date</label>
                        <input type="date" name="maxDate" class="form-control fs-5" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mt-3 fs-5">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
