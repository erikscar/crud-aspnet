@model IEnumerable<CRUD.Models.ProvidersRecord>

<!--Abaixo uma linha qu enão informa a ação que deve ser enviada, neste caso o framework entende
    por padrão a mesma ação vinculada a essa view, que é o SimpleSearch
-->
<form role="search">
    <div class="row justify-content-center text-center fs-5">
        <div class="col-md-3">
            <label for="minDate" class="form-label">Min Date</label>
            <input type="date" class="form-control fs-5" name="minDate" value=@ViewData["minDate"] />
        </div>
        <div class="col-md-3">
            <label for="maxDate" class="form-label">Max Date</label>
            <input type="date" class="form-control fs-5" name="maxDate" value=@ViewData["maxDate"] />
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary my-4 w-25">Filter</button>
    </div>
</form>

<div class="container">
    <div class="text-center">
        <h2 class="p-3 btn btn-outline-secondary fs-4 w-100 my-4">Total Sales = @Model.Sum(obj => obj.Amount).ToString("C")</h2>
    </div>
    <div>
        <table class="table table-striped table-dark table-bordered table-hover">
            <thead class="bg-light">
                <tr class="table-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Provider)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Provider.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Provider.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Provider.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>