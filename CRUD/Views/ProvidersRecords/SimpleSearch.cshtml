@model IEnumerable<CRUD.Models.ProvidersRecord>

<h2>@ViewData["Title"]</h2>

        <!--Abaixo uma linha qu enão informa a ação que deve ser enviada, neste caso o framework entende
            por padrão a mesma ação vinculada a essa view, que é o SimpleSearch
        -->
        <form role="search">
    <div class="row justify-content-center text-center fs-5">
                <div class="col-md-3">
                    <label for="minDate" class="form-label">Min Date</label>
            <input type="date" class="form-control fs-5" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="col-md-3">
                    <label for="maxDate" class="form-label">Max Date</label>
            <input type="date" class="form-control fs-5" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <div class="text-center"> 
        <button type="submit" class="btn btn-primary mt-4 w-25">Filter</button>
            </div>
        </form>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Provider)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Provider.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Provider.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Provider.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>